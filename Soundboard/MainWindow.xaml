                    <Label x:Name="labelSoundboardStatus" Content="Not detected" HorizontalAlignment="Left" Margin="99,31,0,0" VerticalAlignment="Top" Width="145" Grid.ColumnSpan="2"/>
                </Grid>
            </GroupBox>
        </Grid>
