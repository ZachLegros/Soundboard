                    <Button x:Name="btnLoadProfile" Content="Load profile" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" Width="234" Grid.ColumnSpan="2"/>
                    <Button x:Name="btnSaveProfile" Content="Save profile" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="234" Grid.ColumnSpan="2"/>
                    <Button x:Name="btnSaveProfileAs" Content="Save profile as" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Width="234" Grid.ColumnSpan="2"/>
                </Grid>
            </GroupBox>
            <GroupBox Header="USB Soundboard" Height="151" HorizontalAlignment="Stretch" Margin="0,252,0,0" VerticalAlignment="Top">
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="107*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="comboSerialPort" HorizontalAlignment="Right" Margin="0,0,9,0" VerticalAlignment="Top" Width="146" Height="26" Grid.ColumnSpan="2"/>
                    <Label Content="Port" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="0.477,0.026"/>
